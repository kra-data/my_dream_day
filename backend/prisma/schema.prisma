model PayrollSettlement {
  id            Int      @id @default(autoincrement())
  shopId        Int
  employeeId    Int
  cycleStart    DateTime @db.Timestamp(3)
  cycleEnd      DateTime @db.Timestamp(3)
  workedMinutes Int
  basePay       Int
  totalPay      Int
  settledAt     DateTime @default(now())
  processedBy   Int?
  note          String?

